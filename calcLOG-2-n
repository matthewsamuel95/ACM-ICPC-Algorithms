//Finding Log_2(n) using formula log_2(n) = log n / log 2

#include <iostream>
#include <cmath>

#define lg2 log (2)
using namespace std;

//function to calculate log base 2
double getLOG(double n){
  double lgn = log (n);
  double result = lgn / lg2;
  return result;
}

int main(){
  double n;
  cin>>n;                                         //give input
  double result = getLOG(n);
  cout<<result<<endl;                             //output
  return 0;
}
